{
  "name": "hyperswarm-cli-hello",
  "version": "1.0.0",
  "description": "Advanced Hyperswarm CLI application with peer discovery, messaging, and comprehensive logging",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --inspect index.js",
    "peer": "node index.js peer",
    "demo": "npm run demo:setup && npm run demo:run",
    "demo:setup": "echo 'Setting up demo environment...'",
    "demo:run": "concurrently \"npm run peer\" \"sleep 2 && npm run peer\" \"sleep 4 && npm run peer\"",
    "test": "brittle test/unit/*.js test/integration/*.js",
    "test:old": "node test.js",
    "test:coverage": "brittle --coverage test/unit/*.js test/integration/*.js",
    "test:unit": "brittle test/unit/*.js",
    "test:integration": "brittle test/integration/*.js",
    "test:e2e": "brittle test/e2e/*.js",
    "logs": "tail -f log/*.log",
    "clean": "rm -rf log/*.log coverage/ && echo 'Logs and coverage cleaned'"
  },
  "keywords": [
    "hyperswarm",
    "p2p",
    "cli",
    "networking",
    "distributed"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "b4a": "^1.6.4",
    "chalk": "^5.3.0",
    "es-toolkit": "^1.30.0",
    "hypercore-crypto": "^3.4.0",
    "hyperswarm": "^4.7.15",
    "minimist": "^1.2.8"
  },
  "devDependencies": {
    "brittle": "^3.18.0",
    "concurrently": "^8.2.2"
  }
}
